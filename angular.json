{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "web": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/web",
      "sourceRoot": "projects/web/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/web/src/main.ts",
            "tsConfig": "projects/web/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/web/public"
              }
            ],
            "styles": [
              "projects/web/src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "web:build:production"
            },
            "development": {
              "buildTarget": "web:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/web/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/web/public"
              }
            ],
            "styles": [
              "projects/web/src/styles.scss"
            ]
          }
        }
      }
    },
    "@db-uml/ui-diagram": {
      "projectType": "library",
      "root": "projects/db-uml/ui-diagram",
      "sourceRoot": "projects/db-uml/ui-diagram/src",
      "prefix": "db",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/db-uml/ui-diagram/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/db-uml/ui-diagram/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/db-uml/ui-diagram/tsconfig.spec.json"
          }
        }
      }
    },
    "@db-uml/domain-model": {
      "projectType": "library",
      "root": "projects/db-uml/domain-model",
      "sourceRoot": "projects/db-uml/domain-model/src",
      "prefix": "db",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/db-uml/domain-model/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/db-uml/domain-model/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/db-uml/domain-model/tsconfig.spec.json"
          }
        }
      }
    },
    "@db-uml/collab-core": {
      "projectType": "library",
      "root": "projects/db-uml/collab-core",
      "sourceRoot": "projects/db-uml/collab-core/src",
      "prefix": "db",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/db-uml/collab-core/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/db-uml/collab-core/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/db-uml/collab-core/tsconfig.spec.json"
          }
        }
      }
    }
  }
}
